			if($mentions[0] ne $myusername) {
				$conf = Config::IniFiles->new(-file => INIFILE, -allowempty => 1);
				my $ircnick = $conf->val('nickmappings', substr($mentions[0], 1), undef);
				incKarma($ircnick);
			}
